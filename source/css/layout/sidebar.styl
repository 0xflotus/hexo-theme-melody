#sidebar
  position: fixed
  top: 0
  left: -300px
  z-index: 10
  overflow-y: auto
  padding: 0.5rem 0 0.5rem 0.5rem
  width: $sidebar-width
  height: 100%
  background: $sidebar-background
  box-shadow: -5px 0 5px rgba(232, 237, 250, 0.6) inset

  .sidebar-toc
    padding-top: 50px

    ol,
    li
      list-style: none

    ol
      padding-left: 0.4rem

    &__title
      padding-right: 0.5rem
      text-align: center
      font-size: 1rem

    .toc-link
      display: block
      padding-left: 0.2rem
      text-decoration: none

      &.active
        background: $cyan
        color: $white
