each article in page.posts.data
  .recent-post-item
    if article.link
      a(href=url_for(article.link) target="_blank")= article.title || 'No Title'
    else
      a(href=url_for(article.path))= article.title || 'No Title'
    time(datetime=date_xml(article.date))= date(article.date)
    != article.excerpt
    hr

